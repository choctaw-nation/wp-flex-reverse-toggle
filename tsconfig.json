{
	"compilerOptions": {
		"outDir": "build",
		"declaration": true,
		"declarationDir": "build",
		"module": "ESNext",
		"target": "ES2019",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"skipLibCheck": true, // Ignore type checking of declaration files
		"noEmitOnError": false, // Allow emitting files even if there are errors
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src"]
}
